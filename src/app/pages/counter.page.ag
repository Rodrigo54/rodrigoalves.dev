<script lang="ts">
  // counter.analog
  import { signal } from '@angular/core';
  import { RouteMeta } from '@analogjs/router';

  const count = signal(0);

  function mais() {
    count.update(c => c + 1);
  }

  function menos() {
    count.update(c => c - 1);
  }

  defineMetadata({
    selector: 'angular-analog',
    host: { class: 'block articles-toggle' },
  });

  export const routeMeta: RouteMeta = {
    title: 'Angular Analog',
  };

</script>

<template>
  <div class="container">
    <button (click)="mais()">+</button>
    <div class="value">{{count()}}</div>
    <button (click)="menos()">-</button>
  </div>
</template>

