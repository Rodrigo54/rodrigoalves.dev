{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "ESNext"
    ],
    "noImplicitAny": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["components/*"],
      "@templates/*": ["templates/*"],
      "@utils/*": ["utils/*"],
      "@model/*": ["model/*"],
      "@styles/*": ["styles/*"]
    }
  }
}
