{
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[css][scss][less]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.ag": "analog",
    "*.txt": "plaintext",
  },
  "material-icon-theme.files.customClones": [
    {
      "name": "angular-analog",
      "base": "angular",
      "color": "red-400",
      "fileExtensions": ["ag", "analog"]
    },
    {
      "name": "angular-inline",
      "base": "angular",
      "color": "pink-400",
      "fileExtensions": ["ng.ts"]
    },
    {
      "name": "angular-pages",
      "base": "angular",
      "color": "green-600",
      "fileExtensions": ["page.ts"]
    },
  ],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commit message format. Add lots of emojis. No exceed 80 caracteres. Use emojis list ['âœ¨ feat', 'ğŸ”¥ fix', 'ğŸ› ï¸ chore', 'ğŸ› bug', 'ğŸ“¦ build', 'âš™ï¸ config', 'ğŸš€ release', 'ğŸ“š docs', 'ğŸ§ª test', 'ğŸ’„ style', 'ğŸš€ deploy']. For example: âœ¨ feat(any-component): add new feature"
    }
  ],
  "cSpell.words": [
    "iconoir",
    "webp"
  ]
}
